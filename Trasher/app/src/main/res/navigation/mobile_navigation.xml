    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="kopaczewski.jaroslaw.trasher.activity.ui.map.MapFragment"
        android:label="@string/title_map"
        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="kopaczewski.jaroslaw.trasher.activity.ui.list.ListFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_list" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="kopaczewski.jaroslaw.trasher.activity.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
